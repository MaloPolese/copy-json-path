{
  "name": "copy-json-path",
  "publisher": "Malo",
  "displayName": "Copy Json Path",
  "description": "This extension allows you to copy and paste a jsonpath",
  "icon": "assets/logo.png",
  "repository": {
    "url": "https://github.com/MaloPolese/copy-json-path/tree/main"
  },
  "version": "1.4.0",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:copy-json-path.copy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-json-path.copy",
        "title": "%vscode-jsonpath.commands.copy%",
        "group": "myGroup@1"
      }
    ],
    "keybindings": [
      {
        "command": "copy-json-path.copy",
        "key": "cmd+alt+c",
        "mac": "cmd+alt+c",
        "linux": "ctrl+alt+c",
        "windows": "ctrl+alt+c",
        "when": "editorTextFocus && (editorLangId == 'json' || editorLangId == 'jsonc')"
      }
    ],
    "configuration": {
      "title": "Copy Json Path",
      "properties": {
        "json.copyJsonPath.includeFileName": {
          "type": "boolean",
          "default": false,
          "description": "Include the name of the json file at the beginning of the path"
        },
        "json.copyJsonPath.useBracketNotation": {
          "type": "boolean",
          "default": false,
          "description": "Use bracket notation instead of dot notation"
        },
        "json.copyJsonPath.quote": {
          "type": "string",
          "default": "Double",
          "enum": [
            "Single",
            "Double"
          ],
          "description": "Use single or double quote in bracket notation",
          "enumDescriptions": [
            "Use single quote",
            "Use double quote"
          ]
        },
        "json.copyJsonPath.output": {
          "type": "string",
          "default": "%PATH%",
          "description": "Control the output of the path. %PATH% will be replaced by the path. You can add text before and after the path."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == json",
          "command": "copy-json-path.copy",
          "group": "copyPath"
        },
        {
          "when": "resourceLangId == jsonc",
          "command": "copy-json-path.copy",
          "group": "copyPath"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "format": "prettier --check .",
    "fix": "npm-run-all fix:*",
    "fix:format": "prettier --write \"src/**/*.ts\" ",
    "fix:lint": "npm run lint --fix",
    "deploy": "vsce publish",
    "prepare": "husky"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "husky": "^9.1.7",
    "mocha": "^10.1.0",
    "prettier": "2.3.2",
    "typescript": "^4.4.0",
    "vsce": "^2.15.0",
    "vscode-test": "^1.5.2"
  },
  "overrides": {
    "xml2js": "^0.5.0"
  },
  "dependencies": {
    "jsonc-parser": "^3.0.0",
    "npm-run-all": "^4.1.5"
  }
}
