{
  "name": "copy-json-path",
  "publisher": "Malo",
  "displayName": "Copy Json Path",
  "description": "This extension allows you to copy and paste a jsonpath",
  "icon": "assets/logo.png",
  "repository": {
    "url": "https://github.com/MaloPolese/copy-json-path/tree/main"
  },
  "version": "1.0.4",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:copy-json-path.copy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-json-path.copy",
        "title": "%vscode-jsonpath.commands.copy%",
        "group": "myGroup@1"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == json",
          "command": "copy-json-path.copy",
          "group": "copyPath"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "format": "prettier --write \"src/**/*.ts\" ",
    "fix": "npm-run-all fix:*",
    "fix:prettier": "npm run format",
    "fix:lint": "npm run lint --fix",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^10.1.0",
    "prettier": "2.3.2",
    "typescript": "^4.3.2",
    "vsce": "^2.13.0",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "jsonc-parser": "^3.0.0",
    "npm-run-all": "^4.1.5"
  }
}
